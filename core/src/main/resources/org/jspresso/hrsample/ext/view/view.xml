<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
                      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
  default-lazy-init="true">

  <!--
    The views
  -->
  <!-- Describe your application views here. -->

  <bean
      id="loginViewDescriptor"
      parent="loginViewDescriptorBase">
    <property name="preferredWidth" value="500" />
    <property
        name="modelDescriptor"
        ref="CaptchaUsernamePasswordHandler"/>
    <property
        name="columnCount"
        value="2"/>
    <property
        name="permId"
        value="loginViewDescriptor"/>
    <property
        name="propertyViewDescriptors">
      <list>
        <bean
            class="org.jspresso.framework.view.descriptor.basic.BasicPropertyViewDescriptor">
          <property
              name="name"
              value="username"/>
          <property
              name="width"
              value="2"/>
        </bean>
        <bean
            class="org.jspresso.framework.view.descriptor.basic.BasicPropertyViewDescriptor">
          <property
              name="name"
              value="password"/>
          <property
              name="width"
              value="2"/>
        </bean>
        <bean
            class="org.jspresso.framework.view.descriptor.basic.BasicPropertyViewDescriptor">
          <property
              name="name"
              value="captchaImageUrl"/>
          <property
              name="width"
              value="2"/>
        </bean>
        <bean
            class="org.jspresso.framework.view.descriptor.basic.BasicPropertyViewDescriptor">
          <property
              name="name"
              value="captchaChallenge"/>
          <property
              name="width"
              value="2"/>
        </bean>
        <bean
            class="org.jspresso.framework.view.descriptor.basic.BasicPropertyViewDescriptor">
          <property
              name="name"
              value="language"/>
          <property
              name="width"
              value="2"/>
        </bean>
        <bean
            class="org.jspresso.framework.view.descriptor.basic.BasicPropertyViewDescriptor">
          <property
              name="name"
              value="timeZoneId"/>
          <property
              name="width"
              value="2"/>
        </bean>
        <bean
            class="org.jspresso.framework.view.descriptor.basic.BasicPropertyViewDescriptor">
          <property
              name="name"
              value="rememberMe"/>
          <property
              name="width"
              value="2"/>
        </bean>
        <bean
            class="org.jspresso.framework.view.descriptor.basic.BasicPropertyViewDescriptor">
          <property
              name="name"
              value="register"/>
          <property
              name="readOnly"
              value="true"/>
          <property
              name="action">
            <ref bean="registerFrontAction"/>
          </property>
        </bean>
        <bean
            class="org.jspresso.framework.view.descriptor.basic.BasicPropertyViewDescriptor">
          <property
              name="name"
              value="help"/>
          <property
              name="readOnly"
              value="true"/>
          <property
              name="action">
            <ref bean="helpFrontAction"/>
          </property>
        </bean>
      </list>
    </property>
  </bean>

</beans>
