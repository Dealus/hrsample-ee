<?xml version="1.0" encoding="UTF-8"?>
<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
                      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
  default-lazy-init="true">

  <bean
      id="loginViewDescriptor"
      parent="loginViewDescriptorBase">
    <property
        name="modelDescriptor"
        ref="CaptchaUsernamePasswordHandler"/>
    <property
        name="permId"
        value="loginViewDescriptor"/>
  </bean>

  <bean id="basicLoginViewDescriptor" parent="basicLoginViewDescriptorBase">
    <property
        name="propertyViewDescriptors">
      <list>
        <bean
            class="org.jspresso.framework.view.descriptor.basic.BasicPropertyViewDescriptor">
          <property
              name="name"
              value="username"/>
        </bean>
        <bean
            class="org.jspresso.framework.view.descriptor.basic.BasicPropertyViewDescriptor">
          <property
              name="name"
              value="password"/>
        </bean>
        <bean
            class="org.jspresso.framework.view.descriptor.basic.BasicPropertyViewDescriptor">
          <property
              name="name"
              value="captchaImageUrl"/>
        </bean>
        <bean
            class="org.jspresso.framework.view.descriptor.basic.BasicPropertyViewDescriptor">
          <property
              name="name"
              value="captchaChallenge"/>
        </bean>
        <bean
            class="org.jspresso.framework.view.descriptor.basic.BasicPropertyViewDescriptor">
          <property
              name="name"
              value="rememberMe"/>
        </bean>
        <bean
            class="org.jspresso.framework.view.descriptor.basic.BasicPropertyViewDescriptor">
          <property
              name="name"
              value="register"/>
          <property
              name="readOnly"
              value="true"/>
          <property
              name="action">
            <ref bean="registerFrontAction"/>
          </property>
        </bean>
        <bean
            class="org.jspresso.framework.view.descriptor.basic.BasicPropertyViewDescriptor">
          <property
              name="name"
              value="help"/>
          <property
              name="readOnly"
              value="true"/>
          <property
              name="action">
            <ref bean="helpFrontAction"/>
          </property>
        </bean>
      </list>
    </property>
  </bean>
</beans>
